<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:minHeight="60dp"
        android:padding="16dp"
        android:background="?selectableItemBackground"
        >

    <TextView
            android:id="@+id/talkStartHourTextView"
            android:textColor="@color/mkpBlue"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            android:id="@+id/talkEndHourTextView"
            android:textColor="@color/mkpBlue"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/talkStartHourTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    <TextView
            android:id="@+id/talkTitleTextView"
            tools:text="Sample"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/talkStartHourTextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            android:id="@+id/talkSubTitleTextView"
            tools:text="Sample"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/talkStartHourTextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/talkTitleTextView"
            />
</android.support.constraint.ConstraintLayout>